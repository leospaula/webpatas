main.gray
  .container.dashboard
    = render 'sidebar'
    .dashboard-list
      .col-md-9
        ul.DashboardList
          li.DashboardList-header.clearfix
            .pull-left
              h2.DashboardList-Headertitle Meus produtos
            .pull-right
              .DashboardList-headerAction
                button.Button Adicionar Produto
          - @items.each do |item|
            li.DashboardList-item
              .DashboardList-block
                .DashboardList-img = image_tag item.image_1
              .DashboardList-block
                span.DashboardList-title = item.name
              .DashboardList-block
                .DashboardList-price
                  span.PriceBox-text Pre√ßo
                  p.PriceBox-price = number_to_currency(item.price)
              .DashboardList-action.u-alignVertical
                = link_to edit_item_path(item) do
                  button.DashboardList-button.Button.u-pushRight5 = icon('pencil')
                = link_to item_path(item), method: :delete, data: { confirm: "Deseja excluir esse item?" } do
                  button.DashboardList-button.Button = icon('times')
          = paginate @items
